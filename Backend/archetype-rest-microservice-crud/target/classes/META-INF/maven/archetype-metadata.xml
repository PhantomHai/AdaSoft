<archetype-descriptor
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
	name="frnd-example-archetype"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<!--- Corresponden a los filtros aplicados a los dintintos directorios del 
		proyecto por medio de comando Maven -->
	<fileSets>
		<fileSet filtered="false" packaged="false">
			<directory>src/main/resources</directory>
			<includes>
				<include>**/*.properties</include>
				<include>**/*.xml</include>
			</includes>
		</fileSet>

		<fileSet filtered="true">
			<directory>src/main/resources/META-INF</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		
		<fileSet filtered="false">
			<directory>src/main/resources/velocity</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		
		<fileSet filtered="false">
			<directory>src/main/resources/routes</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>		
		
		<fileSet filtered="false">
			<directory>src/main/resources/wsdl</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>				


		<fileSet filtered="true" packaged="false">
			<directory>src/main/java</directory>
		</fileSet>
		
		
        <fileSet filtered="false" packaged="false" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>.gitignore</include>
				<include>configuration/</include>
				<include>*.yaml</include>
				<include>*.xml</include>
                <include>README.md</include>
            </includes>
        </fileSet>


		
	</fileSets>
</archetype-descriptor>